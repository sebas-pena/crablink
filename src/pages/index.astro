---
import { URLForm } from "../components/URLForm";
import { URLList } from "../components/URLList";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to CrabLink.">
	<div class="flex flex-col min-h-lvh">
		<h1
			class="text-white text-center text-5xl sm:text-6xl font-bold leading-none"
		>
			Welcome to <span class="text-gradient">CrabLink</span>
		</h1>

		<URLForm client:visible />

		<URLList client:visible />
	</div>

	<div class="flex flex-col items-center gap-4 mt-10 mx-auto">
		<svg class="h-10 w-10 shrink-0">
			<use href="#icon-alert"></use>
		</svg>
		<p class="font-semibold text-white text-center">
			This site operates without authentication. If you delete your browser data
			or remain inactive for over a year, you won't be able to view or delete
			your shortened links.
		</p>
	</div>
</Layout>

<style>
	.original {
		display: block;
	}
	.shortened {
		display: none;
	}
	#shortened-list a {
		flex-basis: 0;
		flex-grow: 1;
		overflow: hidden;
		text-overflow: ellipsis;
		white-space: nowrap;
	}
	ol,
	ul {
		list-style: none;
	}
	li:has(.delete:hover, .copy:hover, .copy:focus) .original {
		display: none;
	}
	li:has(.delete:hover, .copy:hover, .copy:focus) .shortened {
		display: block;
	}
	.text-gradient {
		background-image: linear-gradient(
			45deg,
			rgb(234 58 58),
			rgb(250 204 216) 30%,
			white 60%
		);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
</style>
